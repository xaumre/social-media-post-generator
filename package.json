{
  "name": "vibe-terminal",
  "version": "1.0.0",
  "description": "Social media post generator with vintage terminal UI",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "npm run build:css && node server/server.js",
    "build": "npm run build:css && npm run migrate",
    "build:css": "node_modules/.bin/tailwindcss -i ./public/input.css -o ./public/styles.css --minify",
    "migrate": "node server/migrate.js",
    "migrate:verification": "node server/migrations/add_email_verification.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.20.0",
    "pg": "^8.11.3",
    "tailwindcss": "^3.4.0"
  }
}
